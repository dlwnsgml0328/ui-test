{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "~": ["./"],
      "~/*": ["./*"],
      "@api": ["./api/"],
      "@api/*": ["./api/*"],
      "@components": ["./components/"],
      "@components/*": ["./components/*"],
      "@contexts": ["./contexts/"],
      "@contexts/*": ["./contexts/*"],
      "@hooks": ["./hooks/"],
      "@hooks/*": ["./hooks/*"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@styles": ["./styles/"],
      "@styles/*": ["./styles/*"],
      "@types": ["./types/"],
      "@types/*": ["./types/*"],
      "@utils": ["./utils/"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
